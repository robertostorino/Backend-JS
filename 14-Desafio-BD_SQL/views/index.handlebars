<div class="d-flex flex-column" style="width: 40%; padding-right: 3rem">
    <div>
        <div class="container mt-3 d-flex justify-content-center flex-column align-items-center">
            <h2 style="color: brown;">PRODUCTOS</h2>
            <div class="text-bg-light " style="padding: 0rem 2rem; border-radius: 4%">
                <h2 style="color:blue;">Ingrese Producto</h2>
                <form style="display: flex; justify-content: center; align-items: center; flex-direction: column;" id="productForm" autocomplete="off">
                    <div class="form-group">
                        <label for="title"><b>Nombre</b></label>
                        <input class="form-control" type="text" name="title" required>
                    </div>

                    <div class="form-group">
                        <label for="price"><b>Precio</b></label>
                        <input class="form-control" type="number" name="price" required>
                    </div>

                    <div class="form-group">
                        <label for="thumbnail"><b>URL imagen</b></label>
                        <input class="form-control" type="text" name="thumbnail" required>
                    </div>
                    <input class="btn btn-primary my-2" type="submit" value="Guardar">
                </form>
            </div>
        </div>
    </div>
    <hr>
    <div class="table-responsive container">
        <table class="table table-success">
            <thead>
                <tr>
                    <th scope="col">Producto</th>
                    <th scope="col">Precio</th>
                    <th scope="col">Imagen</th>
                </tr>
            </thead>
            <tbody id="tbody">
            </tbody>
        </table>
    </div>
</div>

<div style="width: 40%; padding-left: 3rem; border-left: 1px solid gray; ">
    <div class="mt-3">
        <h2 style="color: brown; margin: auto; width: 50%; text-align: center">CHAT</h2>
        <br>
        <form autocomplete="off" style="padding-right: 3rem;" id="messageForm">
            <div class="form-group row">
                <label for="mail" class="col-sm-2 col-form-label"><b>Email</b></label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" name="mail">
                </div>
            </div>
            <br>
            <div class="form-group row" style="padding-right: 0.6rem;">
                <label for="message" class="col-sm-2 col-form-label"><b>Mensaje</b></label>
                <div class="col-sm-8">
                    <textarea class="form-control" name="message" rows="2" style="resize: none"></textarea>
                </div>
                <button type="submit" class="btn col-sm-2 btn-primary" style="height: fit-content;" id="sendMessage">
                    <span class="material-icons">send</span>
                </button>
            </div>
        </form>
        <hr>
        <div id="mensajes"></div>
    </div>
</div>