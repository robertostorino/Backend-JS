<div class="container my-5">
    <div class="jumbotron bg-light d-flex justify-content-center flex-column align-items-center rounded">
        <h1>Login de Usuario</h1>
        <br>
        <form class="form" action="/login" method="post" roles="form" autocomplete="off">
            <div class="form-group">
                <input id="email" name="email" placeholder="email@email.com" type="email" required>
            </div>
            <div class="form-group">
                <input id="passwrod" name="passwrod" placeholder="passwrod" type="password" required>
            </div>
            
            <div class="text-left">
                <button type="submit" class="btn btn-success my-3 tertiary" onclick="location.href = '/'">Enviar</button>
            </div>
        </form>
        
        <hr/>

        <div class="text-left">
            <button class="btn btn-success my-3 tertiary" onclick="location.href = '/register'">Ir al Registro</button>
        </div>
    </div>
</div>