<div class="container my-5">
    <div class="jumbotron bg-light d-flex justify-content-center flex-column align-items-center rounded">
        <h1>Login de Usuario</h1>
        <br>
        <form class="form" action="/login" method="post" roles="form" autocomplete="off">
            <div class="form-group">
                <label for="username"><b>Ingrese su nombre</b></label>
                <input id="username" name="username" placeholder="Daniel" type="text" required>
            </div>
            <div class="text-left">
                <button type="submit" class="btn btn-success my-3 tertiary" onclick="location.href = '/'">Enviar</button>
            </div>
        </form>
    </div>
</div>