<% if(listExists){ %>
    <h3 style="color:blue;">LISTA DE PRODUCTOS</h3>
    <div class="table-responsive container">
        <table class="table table-success">
            <thead>
                <tr>
                    <th scope="col">Producto</th>
                    <th scope="col">Precio</th>
                    <th scope="col">Imagen</th>
                </tr>
            </thead>
            <tbody>  
                <% products.forEach(function(n) { %>
                    <tr>
                        <td><%= n.title %></td>
                        <td><%= n.price %></td>
                        <td>
                            <img style="width: 60px" src=<%=n.thumbnail %> alt=<%=n.title %>
                        </td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    <% } else{ %>  
        <h4 class="alert alert-danger container">NO HAY PRODUCTOS</h4>
    <% } %>